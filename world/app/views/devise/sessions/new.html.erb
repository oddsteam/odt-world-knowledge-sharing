<section class="w-full">
    <div class="mx-auto py-16 sm:py-12">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-xl text-center flex flex-row justify-center">
                <figure class="w-full flex flex-row justify-center">
                    <img class="w-32 md:w-40 lg:w-48 xl:w-56" src="<%= image_url "logo-black.png" %>">
                </figure>
            </div>
            <div class="mx-auto mt-8 p-4 max-w-xl flex flex-col items-center border border-gray-300 rounded-md">
                <form class="w-full flex flex-col gap-y-4 p-8 border-b" method="post" action="<%= new_user_session_path %>">
                    <div>
                        <label for="login" class="block text-sm font-medium leading-6 text-gray-900">Login</label>
                        <div class="mt-2">
                            <input type="text" name="user[login]" id="login" autocomplete="login" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>
                    <div>
                        <label for="user_password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
                        <div class="mt-2">
                            <input type="password" name="user[password]" id="user_password" autocomplete="" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>
                    <div class="w-full flex flex-row justify-end">
                        <button type="submit" class="rounded-md bg-gray-600 px-3 py-2 min-w-28 text-sm font-semibold text-white shadow-sm hover:bg-gray-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600">Login</button>
                    </div>
                </form>
                <div class="w-full py-6 text-sm font-medium text-gray-500 flex flex-row items-center justify-center">
                    <%= button_to omniauth_authorize_path("user", "google_oauth2"), method: :post, class: "flex flex-row items-center font-semibold border rounded-md text-semibold", style: "padding: 6px 8px;", data: { turbo: false } do %>
                        <%= image_tag('google-logo.svg', alt: 'Google', width: 16, style: "margin-right: 6px;" ) %> Sign in with Google
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>