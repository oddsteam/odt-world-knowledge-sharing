<% if user.profile_picture %>
    <div class="w-full bg-cover bg-center pb-aspect-3-4 rounded-md overflow-hidden" style="background-image: url('<%= large_profile_picture_path(user.id) %>');"></div>
<% else %>
    <div class="relative w-full bg-slate-600 pb-aspect-3-4 rounded-md">
        <div class="absolute inset-0 w-full text-gray-200 flex flex-row justify-center items-center text-4xl overflow-hidden"><%= user.abbrevname %></div>
    </div>
<% end %>