<% isDayAvailable = "is#{day.capitalize}Available" %>
<div class="min-h-12 flex flex-row items-center gap-x-4" x-data="{ <%= isDayAvailable %>: <%= selected %> }">
    <%= render :partial => "shared/slider_checkbox", :locals => { input_name: isDayAvailable } %>
    <div class="font-bold text-sm" :class="<%= isDayAvailable %> ? 'text-slate-600' : 'text-slate-400' "><%= day.capitalize %></div>
    <div class="flex flex-row gap-x-2 items-center" x-show="<%= isDayAvailable %>">
        <%= render :partial => "shared/time_picker", :locals => { input_name: "#{day}From" } %>
        -
        <%= render :partial => "shared/time_picker", :locals => { input_name: "#{day}To" } %>
    </div>
</div>